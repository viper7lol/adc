<Window x:Class="adc.View.QuanLyNguoiDungView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:adc.UserControllADC"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource QLNDVM}"
                ResizeMode="NoResize"
WindowStyle="None"
WindowStartupLocation="CenterScreen"
        Title="Quản lý Người Dùng" Height="600" Width="1000"
        Name="QLNDView"
        Background="#F0F4F8">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControllBarUC Tag="{Binding Title, ElementName=QLNDView}"></uc:ControllBarUC>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Row="0" Text="Quản lý Người Dùng"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#5E35B1" Margin="10"/>

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="1" Padding="10" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!-- Trường tìm kiếm -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Text="{Binding SearchText}"
                             Margin="5"
                             Width="300"
                             VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="Nhập tên hoặc email để tìm kiếm"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    </StackPanel>

                    <!-- Nút chức năng -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding SearchCommand}" Content="Tìm kiếm"
                     Margin="5" Width="100" Background="#66BB6A" Foreground="White" materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"/>
                        <Button Command="{Binding AddCommand}" Content="Thêm"
                            Margin="5" Width="100" Background="#66BB6A" Foreground="White"/>
                        <Button Command="{Binding EditCommand}" Content="Sửa"
                            Margin="5" Width="100" Background="#FF8A65" Foreground="White"/>
                        <Button Command="{Binding DeleteCommand}" Content="Xóa"
                            Margin="5" Width="100" Background="#E53935" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Bảng danh sách -->
            <materialDesign:Card Grid.Row="2" Margin="0,10,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <DataGrid ItemsSource="{Binding NguoiDungList}"
                          SelectedItem="{Binding SelectedNguoiDung}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          IsReadOnly="True">
                        <DataGrid.Columns>
                            <!-- Cột ID -->
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80"/>
                            <!-- Cột Tên người dùng -->
                            <DataGridTextColumn Header="Tên người dùng" Binding="{Binding TenNguoiDung}" Width="200"/>
                            <!-- Cột Email -->
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <!-- Cột Vai trò -->
                            <DataGridTextColumn Header="Vai trò" Binding="{Binding VaiTroID}" Width="150"/>
                            <!-- Cột Trạng thái -->
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai }" Width="120"/>
                            <!-- Cột Đơn vị hành chính -->
                            <DataGridTextColumn Header="Đơn vị hành chính" Binding="{Binding DonViHanhChinhID}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>