<Window x:Class="adc.View.CapDoHanhChinhView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:adc.UserControllADC"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource CDHCVM}"
        Background="LightPink"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
          ResizeMode="NoResize"
  WindowStyle="None"
        Name="CDHCView"
        WindowStartupLocation="Manual"
        Title="Quản lý cấp hành chính" Height="770" Width="1165">
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/88.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="936*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="79*"></RowDefinition>
            <RowDefinition Height="272*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,169" Grid.RowSpan="2"/>
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Quản lý cấp hành chính" 
                   FontSize="30" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Foreground="White" Margin="20" />

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="1" Padding="10" Margin="20 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input Fields -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Search" 
                             VerticalAlignment="Center" 
                             Margin="20,10,0,0" 
                             Foreground="DarkBlue" Width="27" Height="21"/>
                        <TextBox Text="{Binding TenCapDo}" 
                             Margin="5" 
                             VerticalAlignment="Center" 
                             materialDesign:HintAssist.Hint="Tên cấp hành chính" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding SearchCommand}" 
                            Content="Tìm kiếm" 
                            Margin="5" 
                            Width="100" 
                            Background="#2196F3"
                            BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding AddCommand}"
                            Content="Thêm" 
                            Margin="5" 
                            Width="100" 
                            BorderBrush="Black"
                            Background="#4CAF50"  
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding EditCommand}" 
                            Content="Sửa" 
                            Margin="5" 
                            Width="100" 
                            Background="DarkOrange" 
                            BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding DeleteCommand}" 
                            Content="Xóa" 
                            Margin="5"
                            Width="100" 
                            Background="DarkRed" 
                            BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- List View to display Data -->
            <materialDesign:Card Grid.Row="2" Margin="20 " VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView  ItemsSource="{Binding CapDoList}" 
                          SelectedItem="{Binding SelectedCapDo, Mode=TwoWay}" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <!-- Cột Mã cấp độ -->
                                <GridViewColumn Width="200">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="ID" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="80"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="{Binding ID}" TextAlignment="Center" Foreground="Black" Width="10"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Cột Tên cấp độ-->
                                <GridViewColumn Width="300">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="Tên cấp độ" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="150"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding TenCapDo}" TextAlignment="Center" Foreground="Black" Width="170"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>