<Window x:Class="adc.View.CayTrongView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:uc="clr-namespace:adc.UserControllADC"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource CTVM}"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
                ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Name="CTView"
        Title="Quản lý giống cây trồng" Height="770" Width="1165">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Quản lý giống cây trồng" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="White" Margin="20"/>

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="1" Padding="10" Margin="20 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input Fields -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                        <!-- Tên giống cây -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                            <TextBox Text="{Binding TenGiongCay}" 
                                 Width="100" 
                                 materialDesign:HintAssist.Hint="Tên giống cây" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                            <materialDesign:PackIcon Kind="Plant" 
                                  VerticalAlignment="Center" 
                                   Margin="-20,10,0,0" 
                                   Foreground="Green" 
                                   HorizontalAlignment="Right"/>

                        </StackPanel>

                        <!-- Loại cây trồng -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                            <TextBox Text="{Binding LoaiCayTrongID}" 
              Width="100" 
              materialDesign:HintAssist.Hint="Loại cây trồng" 
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                            <materialDesign:PackIcon Kind="Flower" 
                  VerticalAlignment="Center" 
                  Margin="-10,10,0,0" 
                  Foreground="Orange" 
                  HorizontalAlignment="Right"/>

                        </StackPanel>
                        <!-- Mô tả -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                            <TextBox Text="{Binding MoTa}" 
                                  Width="80" 
                                  materialDesign:HintAssist.Hint="Mô tả" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                            <materialDesign:PackIcon Kind="Flower" 
                              VerticalAlignment="Center" 
                              Margin="-20,10,0,0" 
                              Foreground="IndianRed" 
                              HorizontalAlignment="Right"/>     

                        </StackPanel>
                        <!-- Vùng trồng -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                            <TextBox Text="{Binding VungTrongID}" 
                                   Width="80" 
                                   materialDesign:HintAssist.Hint="Vùng trồng" 
                                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"/> 
                            <materialDesign:PackIcon Kind="Location" 
                                   VerticalAlignment="Center" 
                                   Margin="-20,10,0,0" 
                                   Foreground="DeepSkyBlue" 
                                   HorizontalAlignment="Right"/>

                        </StackPanel>
                    </StackPanel>
                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding SearchCommand}" 
                             Content="Tìm kiếm" 
                             Margin="5" 
                             Width="100" 
                             Background="DarkBlue"
                             BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>    
                        <Button Command="{Binding AddCommand}" 
                            Content="Thêm" 
                            Margin="5" 
                            Width="100" 
                            Background="DarkGreen"
                            BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding EditCommand}" 
                            Content="Sửa" 
                            Margin="5" 
                            Width="100" 
                            Background="DarkOrange" 
                                BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding DeleteCommand}" 
                            Content="Xóa" 
                            Margin="5"
                            Width="100" 
                            Background="DarkRed" 
                                BorderBrush="Black"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- List View to display Data -->
            <materialDesign:Card Grid.Row="2" Margin="20" VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding GiongCayTrongList}" x:Name="ListViewControll"
                          SelectedItem="{Binding SelectedGiongCayTrong, Mode=TwoWay}" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <!-- Cột Mã giống cây -->
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="ID" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="50"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding MaCayTrong}" TextAlignment="Center" Foreground="Black" Width="120"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Cột Tên giống cây -->
                                <GridViewColumn Width="200">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="Tên giống cây" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding TenGiongCay}" TextAlignment="Center" Foreground="Black" Width="200"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Cột Loại cây trồng -->
                                <GridViewColumn Width="190">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="Loại cây trồng" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="120"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding LoaiCayTrong.TenLoaiCayTrong}" TextAlignment="Center" Foreground="Black" Width="180"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Cột Mô tả -->
                                <GridViewColumn Width="200">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="Mô tả" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="80"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding MoTa}" TextAlignment="Center" Foreground="Black" Width="200"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Cột Vùng trồng -->
                                <GridViewColumn Width="180">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="5">
                                                <TextBlock Text="Vùng trồng" Foreground="Black" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding VungTrong.TenVungTrong}" TextAlignment="Center" Foreground="Black" Width="180"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>