<Window x:Class="adc.View.VungTrongView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:uc="clr-namespace:adc.UserControllADC"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource VTVM}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
                        ResizeMode="NoResize"
WindowStyle="None"
WindowStartupLocation="CenterScreen"
        Name="VTView"
        Title="Quản lý vùng trồng" Height="600" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControllBarUC Tag="{Binding Title, ElementName=VTView}"></uc:ControllBarUC>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Quản lý vùng trồng" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="MediumSeaGreen" Margin="10"/>

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="1" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input Fields -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Text="{Binding TenVungTrong}" 
                             Margin="5" 
                             VerticalAlignment="Center" 
                             materialDesign:HintAssist.Hint="Tên vùng trồng" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding AddCommand}" 
                            Content="Thêm" 
                            Margin="5" 
                            Width="100" 
                            Background="MediumSeaGreen"  
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True" 
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"/>
                        <Button Command="{Binding EditCommand}" 
                            Content="Sửa" 
                            Margin="5" 
                            Width="100" 
                            Background="MediumSeaGreen" 
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                        <Button Command="{Binding DeleteCommand}" 
                            Content="Xóa" 
                            Margin="5"
                            Width="100" 
                            Background="MediumSeaGreen"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Data Table -->
            <materialDesign:Card Grid.Row="2" Margin="0,10,0,0" VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding VungTrongList}" 
                          SelectedItem="{Binding SelectedVungTrong, Mode=OneWayToSource}" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <!-- Mã vùng trồng -->
                                <GridViewColumn Width="170">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="MediumSeaGreen" Padding="5" CornerRadius="10,10,0,0">
                                                <TextBlock Text="Mã vùng trồng" Foreground="White" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding MaVungTrong}" TextAlignment="Center" Foreground="Black" Width="170"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Tên vùng trồng -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="MediumSeaGreen" Padding="5" CornerRadius="10,10,0,0">
                                                <TextBlock Text="Tên vùng trồng" Foreground="White" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding TenVungTrong}" TextAlignment="Center" Foreground="Black" Width="250"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Mô tả -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="MediumSeaGreen" Padding="5" CornerRadius="10,10,0,0">
                                                <TextBlock Text="Mô tả" Foreground="White" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding MoTa}" TextAlignment="Center" Foreground="Black" Width="250"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Mã vùng trồng -->
                                <GridViewColumn Width="220">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="MediumSeaGreen" Padding="5" CornerRadius="10,10,0,0">
                                                <TextBlock Text="Mã vùng trong" Foreground="White" FontWeight="Bold" TextAlignment="Center" Width="100"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="White" Padding="5">
                                                <TextBlock Text="{Binding MaVungTrongID}" TextAlignment="Center" Foreground="Black" Width="220"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>